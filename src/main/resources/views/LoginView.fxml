<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>

<VBox spacing="15" alignment="CENTER"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.facturacion.factu3.controllers.LoginController"
      style="-fx-padding: 30; -fx-background-color: #F5F5F5;"> <!-- 🔹 Espaciado general -->

    <ImageView fx:id="imgLogo" fitWidth="100" fitHeight="100"/>

    <Label text="🔐 Iniciar Sesión" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <TextField fx:id="txtUsuario" promptText="Usuario"
               style="-fx-pref-width: 250px; -fx-padding: 5 15 5 15;"/> <!-- 🔹 Espaciado dentro -->

    <PasswordField fx:id="txtPassword" promptText="Contraseña"
                   style="-fx-pref-width: 250px; -fx-padding: 5 15 5 15;"/> <!-- 🔹 Espaciado dentro -->

    <Button text="Ingresar" onAction="#handleLogin"
            style="-fx-pref-width: 200px; -fx-background-color: #3F51B5; -fx-text-fill: white;"/>

    <Label fx:id="lblError" textFill="red"/>
</VBox>
