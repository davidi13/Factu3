<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.facturacion.factu3.controllers.ClientesController">


    <children>

        <VBox spacing="10" AnchorPane.topAnchor="10.0" AnchorPane.bottomAnchor="10.0"
              AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">

            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="100"/>
                    <ColumnConstraints hgrow="ALWAYS" minWidth="200"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="100"/>
                    <ColumnConstraints hgrow="ALWAYS" minWidth="200"/>
                </columnConstraints>

                <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtNombre" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                <Label text="Dirección:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                <TextField fx:id="txtDireccion" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

                <Label text="CIF:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="txtCIF" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                <Label text="Teléfono:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                <TextField fx:id="txtTelefono" GridPane.rowIndex="1" GridPane.columnIndex="3"/>

                <Label text="Email:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="txtEmail" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                <Label text="Provincia:" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
                <TextField fx:id="txtProvincia" GridPane.rowIndex="2" GridPane.columnIndex="3"/>

                <Label text="País:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="txtPais" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                <Label text="IBAN:" GridPane.rowIndex="3" GridPane.columnIndex="2"/>
                <TextField fx:id="txtIban" GridPane.rowIndex="3" GridPane.columnIndex="3"/>

                <Label text="Riesgo (€):" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="txtRiesgo" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                <Label text="Descuento (%):" GridPane.rowIndex="4" GridPane.columnIndex="2"/>
                <TextField fx:id="txtDescuento" GridPane.rowIndex="4" GridPane.columnIndex="3"/>

                <Label text="Observaciones:" GridPane.rowIndex="5" GridPane.columnIndex="0" GridPane.columnSpan="4"/>
                <TextArea fx:id="txtObservaciones" GridPane.rowIndex="6" GridPane.columnIndex="0" GridPane.columnSpan="4"/>
            </GridPane>

            <Button text="Guardar Cliente" fx:id="btnGuardar" onAction="#guardarCliente"/>

            <!-- ✅ Se añade la tabla para mostrar clientes -->
            <TableView fx:id="tblClientes" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn text="ID" fx:id="colId"/>
                    <TableColumn text="Nombre" fx:id="colNombre"/>
                    <TableColumn text="Dirección" fx:id="colDireccion"/>
                    <TableColumn text="CIF" fx:id="colCif"/>
                    <TableColumn text="Teléfono" fx:id="colTelefono"/>
                    <TableColumn text="Email" fx:id="colEmail"/>
                    <TableColumn text="Provincia" fx:id="colProvincia"/>
                    <TableColumn text="País" fx:id="colPais"/>
                    <TableColumn text="IBAN" fx:id="colIban"/>
                    <TableColumn text="Riesgo (€)" fx:id="colRiesgo"/>
                    <TableColumn text="Descuento (%)" fx:id="colDescuento"/>
                    <TableColumn text="Observaciones" fx:id="colObservaciones"/>
                </columns>
            </TableView>

        </VBox>
    </children>
</AnchorPane>
